[
{rabbitmq_management, [
    {load_definitions, "/etc/rabbitmq/rabbitmq.definitions.json"}
    ]},
{rabbitmq_shovel, [
    {shovels, [
        {'panopticon-logstash-shovel', [
            {sources, [
                {broker, "amqp://"}
                ]},
            {destinations, [
                    {broker, "amqp://pan:{{RABBITMQ_PAN_PASSWORD}}@{{RABBITMQ_TARGET_HOST}}/{{RABBITMQ_TARGET_QUEUE}}"},
                    {declarations, [
                        {'exchange.declare', [
			    {exchange, <<"logstash-exchange">>}, {type, <<"direct">>}, durable]}
                    ]}
                ]},
            {queue, <<"panopticon-logstash">>}
	    ]}
        ]}
    ]}
].
